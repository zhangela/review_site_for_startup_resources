<h1>Listing reviews</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Rating</th>
    <th>Body</th>
    <th>User</th>
    <th>Reviewable</th>
    <th>Reviewable type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
    <td><%= review.title %></td>
    <td><%= review.rating %></td>
    <td><%= review.body %></td>
    <td><%= review.user %></td>
    <td><%= review.reviewable_id %></td>
    <td><%= review.reviewable_type %></td>
    <td><%= link_to 'Show', review %></td>
    <td><%= link_to 'Edit', edit_review_path(review) %></td>
    <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Review', [:new, @reviewable, :review] %>
